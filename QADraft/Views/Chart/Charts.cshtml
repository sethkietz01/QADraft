@{
    ViewData["Title"] = "Charts";
}

<h1>Charts</h1>
<div class="image-container" style="display: flex; justify-content: center; margin-top: 50px;">
    <img src="~/images/underConstruction.png" style="width: 50%; "/>
</div>

@* <div id="chart_div" style="width: 100%; height: 500px;"></div> *@

<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', function() {
        var chartsLink = document.getElementById('charts-link'); 
        chartsLink.classList.toggle('highlight-link');
    });

    google.charts.load('current', {'packages':['corechart', 'bar']});
    google.charts.setOnLoadCallback(drawChart);

<button onclick="toggleChart('DonutChartDive')" class="buttons">Show/Hide DonutChart</button>
<div>
    <!-- Partial view must placed within a div that is nested in another div. -->
    <div id="DonutChartDive">
        <!-- Load the partial view for the DonutChart-->
        <partial name="DonutChart"/>
    </div>
</div>


<script>
    // Function to toggle the visibility of the DonutChart(s)
        function toggleChart(chartDiv) {
            // Select the div containing the chart and the buttons to change chart
            // Toggle their visibility using .toggle()
            $("#" + chartDiv).toggle();
        }
</script>