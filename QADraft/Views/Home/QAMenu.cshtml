@{
    ViewData["Title"] = "QA Menu";
    var button = ViewBag.button ?? 0; // Default to the first button if not specified
}

<h2>QA Menu</h2>
<div class="btn-group" role="group" aria-label="Detailed QA Reports Options">
    <a class="btn btn-secondary" href="javascript:void(0)" onclick="loadContent(0)">Filter</a>
    <a class="btn btn-secondary" href="javascript:void(0)" onclick="loadContent(1)">Between Dates</a>
    <a class="btn btn-secondary" href="javascript:void(0)" onclick="loadContent(2)">All Geek QAs</a>
    <a class="btn btn-secondary" href="javascript:void(0)" onclick="loadContent(3)">View All Flagged Accounts</a>
    <a class="btn btn-secondary" href="javascript:void(0)" onclick="loadContent(4)">QA Descriptions</a>
</div>

<div id="qa-content">
    <!-- Content will be loaded here -->
</div>

@section Scripts {
    <script>
        function loadContent(button) {
            fetch(`/QA/LoadContent?button=${button}`)
                .then(response => response.text())
                .then(html => {
                    document.getElementById("qa-content").innerHTML = html;
                });
        }

        document.addEventListener("DOMContentLoaded", function () {
            const buttonIndex = @Html.Raw(Json.Serialize(button));
            loadContent(buttonIndex);
        });
    </script>
}

<style>
    .confirmation-dialog {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        background-color: #d9f0ff;
        border: 1px solid #ccc;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        max-width: 300px;
    }

    .confirmation-content {
        text-align: center;
    }

    .confirmation-buttons {
        margin-top: 20px;
    }

    .confirmation-buttons button {
        padding: 10px 20px;
        margin: 0 10px;
        cursor: pointer;
    }
</style>
