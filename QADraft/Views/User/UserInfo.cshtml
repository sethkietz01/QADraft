@model QADraft.Models.User

@{
    ViewData["Title"] = "Account Information";
    Layout = ViewBag.Layout;
}

<h2>Account Info</h2>
<p>View your User Information.</p>

<!-- From to get details on the updated user information -->

<div class="form-group">
    <label asp-for="Username" class="control-label">Username</label>
    <input asp-for="Username" class="form-control disabled-input" readonly />
    <span asp-validation-for="Username" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="FirstName" class="control-label">First Name</label>
    <input asp-for="FirstName" class="form-control disabled-input" readonly />
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="LastName" class="control-label">Last Name</label>
    <input asp-for="LastName" class="form-control disabled-input" readonly />
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Email" class="control-label">Email Address</label>
    <input asp-for="Email" class="form-control disabled-input" readonly />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Role" class="control-label"></label>
    <input asp-for="Role" class="form-control disabled-input" readonly />
    <span asp-validation-for="Role" class="text-danger"></span>
</div>

<form class="close" asp-controller="Home" asp-action="Index" method="get">
    <input type="submit" name="action" value="Close" class="buttons form-buttons" />
</form>