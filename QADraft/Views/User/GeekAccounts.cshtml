@model List<QADraft.Models.User>

@{
    ViewData["Title"] = "Geek Accounts";
}

<style>
    #user-options-link {
        padding-bottom: 1px;
        border-bottom: 1px solid #fff;
    }

    .edit-user-btn {
        color: #fff;
        background-color: #861F41;
        border-color: #861F41;
    }

        .edit-user-btn:hover {
            color: #fff;
            background-color: #b31f4f;
            border-color: #E6A65D;
        }

</style>

<partial name="_GeeksMenu" />
<h2>Geek Accounts</h2>

<!-- Table to output a list off all users -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var qa in Model)
        {
            <tr>
                <td>@qa.Username</td>
                <td>@qa.FirstName</td>
                <td>@qa.LastName</td>
                <td>@qa.Email</td>
                <td>@qa.Role</td>
                <td>@qa.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn buttons" asp-area="" asp-controller="Home" asp-action="EditUser" asp-route-Id="@qa.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>