            if (arrow) {
                arrow.innerHTML = "";
            }
        }
        console.log("reset arrows");
        // Add arrow to the current sorted column
        if (dir == "asc") {
            console.log("asc");
            headers[n].querySelector(".arrow").innerHTML = "▲";
